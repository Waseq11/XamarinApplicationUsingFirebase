<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MWapplicationXamarin.EditTasks">
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="txtTaskId" Text="{Binding Id}" IsEnabled="False"/>
            <Entry x:Name="txtTaskDescription" Text="{Binding Description}" Placeholder="Description"/>
            <Entry x:Name="txtTaskValue" Text="{Binding Value}" Placeholder="Value"/>
            <Picker x:Name="pickerStatus" HorizontalOptions="FillAndExpand"/>
            <Button x:Name="btnConfirm" Text="Edit" BackgroundColor="DeepSkyBlue" CornerRadius="10" Clicked="btnConfirm_Clicked"/>
            <Button x:Name="btnCancel" Text="Cancel" BackgroundColor="Red" CornerRadius="10" Clicked="btnCancel_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>